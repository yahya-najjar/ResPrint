<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item android:height="8dp"
        android:gravity="bottom">
        <shape  android:shape="rectangle">

            <gradient
                android:angle="90"
                android:endColor="#A39D9D"
                android:startColor="#00FCFCFC"
                android:type="linear" />
            <corners android:radius="9dp" />

        </shape>
    </item>
    <item android:height="15dp"
        android:gravity="bottom">
        <shape  android:shape="rectangle">

            <gradient
                android:angle="90"
                android:endColor="#A39D9D"
                android:startColor="#00FCFCFC"
                android:type="linear" />
            <corners android:radius="9dp" />

        </shape>
    </item>


    <!-- White Top color -->
    <item android:bottom="7px">

        <shape  android:shape="rectangle" >

            <solid android:color="#e7e7e7" />
            <corners android:radius="7dp" />


        </shape>

    </item>


</layer-list>